@using ReadExcel.Models
@model IEnumerable<UserModel>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Users</title>

    <style>
        /* Stijl voor de zoekbalk en knop */
        #search-bar {
            padding: 10px;
            width: 200px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
        }

        #search-button {
            padding: 10px 20px;
            background-color: #007BFF;
            color: #fff;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
        }

            #search-button:hover {
                background-color: #0056b3;
            }
        /* Stijl voor de tabel */
        #data-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

            #data-table th {
                background-color: #007BFF;
                color: #fff;
                text-align: left;
            }

            #data-table th, #data-table td {
                padding: 10px;
                border: 1px solid #ccc;
            }

            #data-table tr:nth-child(even) {
                background-color: #f2f2f2;
            }

            #data-table tr:hover {
                background-color: #ddd;
            }
    </style>

</head>
<body>
    @if (Model.Count() > 0)
    {

        <div style="text-align: center; margin-top: 20px;">
            <input type="text" id="search-bar" placeholder="Search by name or imei...">
            <button id="search-button">Zoeken</button>
        </div>

        <hr />
        <table id="data-table" style="display: none;">
            <tr>
                <th>Naam</th>
                <th>Imei nummer</th>
                <th>Merk</th>
                <th>Model</th>
                <th>Sticker nummer</th>


            </tr>
            @foreach (UserModel user in Model)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.Imei</td>
                    <td>@user.Brand</td>
                    <td>@user.Model</td>
                    <td>@user.StickerNumber</td>
                </tr>
            }
        </table>
    }

    <script>
        const searchButton = document.querySelector("#search-button");
        const searchBar = document.querySelector("#search-bar");
        const dataTable = document.querySelector("#data-table");

        function performSearch() {
            const searchTerm = searchBar.value.toLowerCase();
            const tableRows = dataTable.querySelectorAll("tr");

            let resultsFound = false;

            for (let i = 0; i < tableRows.length; i++) {
                if (i === 0) {
                    continue;
                }
                const nameCell = tableRows[i].querySelector("td:nth-child(1)");
                const imeiCell = tableRows[i].querySelector("td:nth-child(2)");

                const imei = imeiCell.textContent.toLowerCase();
                const name = nameCell.textContent.toLowerCase();
                const nameWords = name.split(' ');

                if (name.includes(searchTerm) || imei.includes(searchTerm)) {
                    tableRows[i].style.display = "table-row";
                    resultsFound = true;
                } else {
                    if (nameWords.some(word => word.includes(searchTerm))) {
                        tableRows[i].style.display = "table-row";
                        resultsFound = true;
                    } else {
                        tableRows[i].style.display = "none";
                    }
                }
            }

            if (searchTerm === "") {
                dataTable.style.display = "none";
                alert("Geen gegevens gevonden.");
            } else if (resultsFound) {
                dataTable.style.display = "table";
            } else {
                dataTable.style.display = "none";
                alert("Geen gegevens gevonden.");
            }
        }

        searchButton.addEventListener("click", performSearch);
        searchBar.addEventListener("keydown", function (event) {
            if (event.key === "Enter") {
                performSearch();
            }
        });
    </script>
</body>
</html>