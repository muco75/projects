@model IEnumerable<InAndOut.Models.itemView>

<div class= "container p-3"> 
    <div class="= row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lijst van klanten</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Gegevens" asp-action="Toevoegen" class="btn btn-primary"> Voeg klant toe</a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0 )
     {

        <table class="table-bordered table-striped"style="width:100%">
            <thead>
                <tr>
                    <th>
                        <div class="col-4">
                            <label for="Borrwer">Klant naam</label>
                        </div>
                    </th>
                    <th>
                        <div class="col-4">
                            <label for="Borrwer">Klant adres</label>
                        </div>
                    </th>
                    <th>
                        <div class="col-4">
                            <label for="Leeftijd">Leeftijd</label>
                        </div>
                    </th>
                    <th>
                        <div class="col-4">
                            <label for="Leeftijd">verwijder</label>
                        </div>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td width="30%">@item.Borrwer</td>
                    <td width="30%">@item.Klantadres</td>
                    <td width="30%">@item.Leeftijd</td>
                    <td width="30%">

                            <div class="col-6 text-right">
                            <a asp-controller="Gegevens" asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger"> verwijder</a>
                            </div>
                    </td>



                </tr>
                }
             <tbody>
</table>

     }
            else
            {
                <p>Nog geen klanten aangemaakt</p>
            }

</div>
