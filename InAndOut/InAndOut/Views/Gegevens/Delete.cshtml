@model InAndOut.Models.item 

<form method="post" asp-action="PostDelete">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Verwijder klant</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        Naam: @Model.Borrwer
                    </div>
                    <div class="col-4">
                        <label asp-for="Klantadres">Adres: @Model.Klantadres</label>
                    </div>

                </div>
                
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Verwijder" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>